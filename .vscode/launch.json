{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
        "name": "web: debug server-side",
        "type": "node-terminal",
        "request": "launch",
        "command": "pnpm dev",
        "cwd": "${workspaceFolder}/apps/dashboard"
      },
      {
        "name": "web: debug client-side",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000",
        "webRoot": "${workspaceFolder}/apps/dashboard",
        "sourceMaps": true,
        "sourceMapPathOverrides": {
          "webpack://_N_E/*": "${webRoot}/*"
        }
      },
      {
        "name": "web: debug full stack",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/apps/dashboard/node_modules/.bin/next",
        "runtimeArgs": ["--inspect"],
        "skipFiles": ["<node_internals>/**"],
        "cwd": "${workspaceFolder}/apps/dashboard",
        "serverReadyAction": {
          "action": "debugWithEdge",
          "killOnServerStop": true,
          "pattern": "- Local:.+(https?://.+)",
          "uriFormat": "%s",
          "webRoot": "${workspaceFolder}"
        }
      }
    ]
  }
  