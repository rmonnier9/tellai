{
  "name": "lovarank",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dotenvx": "dotenvx",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "build:ci": "pnpm --filter=db prisma:migrate:prod && pnpm run build",
    "db:ci": "pnpm --filter @workspace/db prisma:generate",
    "db:generate": "pnpm --filter @workspace/db drizzle:generate",
    "db:migrate": "pnpm --filter @workspace/db dirzzle:migrate",
    "db:studio": "pnpm --filter @workspace/db dirzzle:studio",
    "better-auth:generate": "dotenvx run -- npx @better-auth/cli generate --output ./packages/db/prisma/schema.prisma --config ./packages/auth/server.ts",
    "docker:up": "docker compose -f docker/docker-compose.deps.yml --env-file docker/docker.env up -d",
    "docker:down": "docker compose -f docker/docker-compose.deps.yml down",
    "list-mismatches": "npx syncpack list-mismatches",
    "fix-mismatches": "npx syncpack fix-mismatches",
    "check": "pnpm list-mismatches"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.0",
    "turbo": "^2.4.2",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.45.1"
  }
}
